<Window x:Class="globulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:globulator"
        mc:Ignorable="d"
        Title="Globulator" Height="700" Width="1390" WindowStyle="ToolWindow">
    <Grid x:Name="Main" Background="#FF2B2A33" Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="649*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Image x:Name="pictureBox" Height="601" Margin="768,12,30,72" Width="592" Visibility="Visible"/>
        <TextBox x:Name="commandBox" HorizontalAlignment="Left" Margin="10,625,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="679" Foreground="MistyRose" Background="#FF4B4959" AutomationProperties.HelpText="Command.." TextChanged="TextBox_TextChanged"/>
        <Button x:Name="sendButton" Content="Send &gt;&gt;" HorizontalAlignment="Left" Margin="694,625,0,0" VerticalAlignment="Top" Width="59" Height="18" Click="sendButton_Click"/>
        <RichTextBox x:Name="consoleOutput" Margin="10,10,0,0" MinWidth="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="606" Width="743" Background="#FF1C1B22" Foreground="MistyRose" IsReadOnly="True" FontFamily="Cascadia Code">
            <RichTextBox.RenderTransform>
                <MatrixTransform/>
            </RichTextBox.RenderTransform>
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <UserControl Loaded="UserControl_Loaded" Margin="0,0,1334,620"/>
        <RichTextBox x:Name="viewingBox" Margin="763,10,0,0" MinWidth="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="606" Width="592" Background="#FF1C1B22" Foreground="MistyRose" TextChanged="viewingBox_TextChanged" FontFamily="Cascadia Code">
            <RichTextBox.RenderTransform>
                <MatrixTransform/>
            </RichTextBox.RenderTransform>
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="viewedFilePath" Content="&lt;filePath&gt;" HorizontalAlignment="Left" Margin="763,621,0,0" VerticalAlignment="Top" Foreground="MistyRose" FontFamily="Cascadia Code"/>
    </Grid>
</Window>
